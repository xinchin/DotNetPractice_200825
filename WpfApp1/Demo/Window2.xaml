<Window x:Class="WpfApp1.Demo.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Demo"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Frame x:Name="frame" Source="\Demo\Page1.xaml" NavigationUIVisibility="Hidden" Grid.ColumnSpan="2" Grid.Column="1"/>
        <StackPanel>
            <Button Content="Page1" Click="Button_Click"/>
            <Button Content="Page2" Click="Button_Click_1"/>
            <Button Content="Page3" Click="Button_Click_2"/>
        </StackPanel>

    </Grid>
</Window>
